{% extends "base.jinja2" %}
{% block body %}
<form action="/users/add", method="POST">
    <input type="text" name="user_name" placeholder="add user"/>
    <input type="submit" value="create" />
</form>
<hr>
{%for user in users %}
<input type="button" user_id={{user.user_id}} value="{{user.user_name}}" onclick="selectUser(this)">
<br>
{% endfor %}
{% endblock %}

{% block javascript %}
function selectUser(element) {
    user_id = $(element).attr("user_id");
    window.location = "/user/select/"+user_id;
}
{% endblock %}